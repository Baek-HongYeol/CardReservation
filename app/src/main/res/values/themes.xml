<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CardReservation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#6BEC19</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

    </style>
    <style name="CalendarLayoutTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#6BEC19</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:actionBarTheme">@style/ActionBarStyle</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:background">@color/panelBackgroundColor</item> <!--캘린더 하위 뷰들의 색상이 연동됨-->
        <item name="colorOnBackground">@color/black</item>

    </style>
    <style name="CustomTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/textcolor_selector</item>
        <item name="android:textSize">@dimen/calendar_date_text_size</item>

    </style>

    <style name="CustomHeaderTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/textcolor_selector</item>
        <item name="android:textSize">@dimen/calendar_header_text_size</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>