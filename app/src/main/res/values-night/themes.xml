<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CardReservation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sky</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/panelBackgroundColor</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <!-- Customize your theme here. -->

        <item name="backgroundColor">@color/backgroundColor</item>          <!-- 원래 배경 색 -->

    </style>

    <style name="CalendarLayoutTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sky</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/panelBackgroundColor</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="android:background">@color/panelBackgroundColor</item>  <!-- 캘린더의 하위 뷰들의 색상이 연동 됨-->
        <item name="colorOnBackground">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/backgroundColor</item>          <!-- 원래 배경 색 -->
        <item name="android:itemBackground">@color/backgroundColor</item>

    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/textcolor_selector_dark</item>
        <item name="android:textSize">@dimen/calendar_date_text_size</item>
    </style>

    <style name="CustomHeaderTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/textcolor_selector_dark</item>
        <item name="android:textSize">@dimen/calendar_header_text_size</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">?attr/backgroundColor</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

</resources>